root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
max_line_length = 90
tab_width = 4
trim_trailing_whitespace = true

[*.cfg]
indent_size = 2

[*.json]
indent_size = 2

[*.{yml, yaml}]
indent_size = 2

# Shell scripts on Windows.
[*.{cmd, bat}]
end_of_line = crlf

[Makefile, makefile]
indent_size = 4
indent_style = tab
tab_width = 8

[.applescript]
indent_size = 4
indent_style = tab
tab_width = 4
